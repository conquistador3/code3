#include <bits/stdc++.h>

using namespace std;
long  long int k[3][100001];
int main()
{
    string s,kek="pop";
     std::ios::sync_with_stdio(false);
    int i,n,t,c,p,j,ii;
    cin>>n;
    for(ii=0;ii<n;ii++)
    {
        cin>>s;
        p=s.length();
        k[0][0]=0;
        k[1][0]=0;
        k[2][0]=0;
        for(i=1;i<=p;i++)
        {
            if(s[i-1]=='p')
                k[0][i]=k[0][i-1]+1;
                else
                  k[0][i]=k[0][i-1];
        }
        for(i=1;i<=2;i++)
        {
            for(j=1;j<=p;j++)
            {
                if(kek[i]==s[j-1])
                {
                    k[i][j]=k[i][j-1]+k[i-1][j];
                }
                else
                {
                    k[i][j]=k[i][j-1];
                }
            }
        }


        cout<<k[2][p];
    }
    return 0;
}
